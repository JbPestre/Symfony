{# src/CV/PlatformBundle/Resources/view/Client/view.html.twig #}


{% extends "CVProfilBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block body %}
<h2> Rattacher notre CV à un client : </h2><br>
<table style="width:100%;font-size:30px;">
  <tr>
    <td>
      <form action="{{ path('cv_profil_searchcv', {'id_profil': Profil.id}) }}" method="post">
    <div class="input-group">

      <input type="text" class="form-control" placeholder="Nom du client" name="search">
      <span class="input-group-btn">
        <button class="btn btn-secondary" type="submit">Rechercher</button>
     </span>
      </div>

       </form>

    </td>

    <td style='vertical-align:bottom;float: right;'><a href="{{ path('cv_exemple', {'id': 'no_client' , 'id_profil': Profil.id}) }}"  class="btn btn-primary" style="margin-bottom: 4px;">
      Ne pas rattacher le CV à un client
    </a>
    </td>
     <td style='float:right;vertical-align:bottom;'>

    {% if search is defined %}
         <a href="{{ path('cv_attache', {'id_profil': Profil.id}) }}"" class="btn btn-primary" style="color: #333;
    background-color: #dddddd;
    border-color: #dddddd;
    margin-right:20px;
    margin-bottom: 4px;
    margin-left: 50px;">
        Afficher tous les clients</a>

    {% else %}
         <a href="{{ path('cv_attache', {'id_profil': Profil.id}) }}"" class="btn btn-primary inactiveLink" style="color: #fff;
    background-color: #dddddd;
    border-color: #dddddd;
    margin-right:20px;
    margin-bottom: 4px;
    margin-left: 50px;">
        Afficher tous les clients</a>
    {% endif %}
    </td>
  </tr>
  </tr>
</table>
<br><br>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Type</th>
      <th scope="col">Date de création</th>
      <th scope="col">Sélection</th>
    </tr>
  </thead>
  {% for Client in listClients %}
  <tbody data-link="row" class="rowlink">
    <tr>
      <td>{{ Client.nom }}</td>
      <td>{{ Client.type.nom }}</td>
      <td>{{ Client.dateCrea|date('d/m/Y') }}</td>
       <td style="text-align: center;"> <a href="{{ path('cv_exemple', {'id': Client.id , 'id_profil': Profil.id}) }}" class="btn btn-primary">
      Rattacher
    </a></td>
    </tr>
    {% else %}
      <td>Pas (encore !) de Clients</td>
    {% endfor %}
  </tbody>
</table>
<style>

.inactiveLink {
   pointer-events: none;
   cursor: default;
}
</style> 

{% endblock %}





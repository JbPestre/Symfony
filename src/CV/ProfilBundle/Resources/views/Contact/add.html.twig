{% extends "CVProfilBundle::layout.html.twig" %}


{% block title %}
  Ajouter un interlocuteur
{% endblock %}


{% block body %}
<table style="margin-bottom: 10px;">
  <tr>
    <td><h2>Ajouter un interlocuteur</h2> </td>

 <td style="vertical-align: bottom;padding-bottom: 9.5px;padding-left: 30px;">

    <a href="{{ path('cv_profil_viewclient', {'id': Client.id}) }}" style="background-color: #d5d3d3a6;margin-right:5px;" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i> Revenir à <b>{{ Client.nom }}</b></i>
    </a>
</td>
  </tr>   
</table>
<br>
<div class="well">


{{ form_start(form) }}

{{ form_start(form) }}
<div class="row">
<div class="col-sm-3">
{% if form.dateCrea is defined %}
{{ form_row(form.dateCrea, {'label': 'Date de création'}) }}
{% endif %}
</div>
</div>
<div class="row">
    <div class="col-sm-6">
{{ form_row(form.prenom, {'label': 'Prénom *'}) }}
</div>
  <div class="col-sm-6">
{{ form_row(form.nom, {'label': 'Nom *'}) }}
  </div>
  </div>

<div class="row">
	<div class="col-sm-6">
	{{ form_row(form.poste, {'label': 'Poste *'}) }}
	{{ form_row(form.email, {'label': 'Email *'}) }}
	</div>
	<div class="col-sm-6">  
   {{ form_label(form.domaines, 'Domaine(s) *') }}
   <br><br>
	{{ form_widget(form.domaines) }} 
    </div>
 </div>
<br>
<div class="row">
	<div class="col-sm-4">
	{{ form_row(form.tel1, {'label': 'Téléphone 1 *'}) }}
	</div>
	<div class="col-sm-4">  
	{{ form_row(form.tel2, {'label': 'Téléphone 2 (facultatif)'}) }} 
    </div>
    <div class="col-sm-4">  
	{{ form_row(form.tel3, {'label': 'Téléphone 3 (facultatif)'}) }} 
    </div>
 </div>

<br><br>
*Champs obligatoires
<br><br>
{{ form_widget(form.ajouter, {'attr': {'class': 'btn btn-success'}}) }}
{{ form_rest(form) }}
  {{ form_end(form) }}
</div>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<style>
a:hover, a:visited, a:link, a:active {
  text-decoration: none;
}


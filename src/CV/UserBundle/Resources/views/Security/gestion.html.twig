      <td style="text-align: center;width: 30%;"><b>Nom du domaine</b></td>
      <td style="text-align: center;"><b>Modifier</b></td>
      <td style="text-align: center;"><b>Supprimer</b></td>
      <td style="text-align: center;"><b>Nombre de fois présent</b></td>
   </tr>
  {% for domaines in listDomaines %}

   <tr>
    <td><b>{{ domaines.nom }}</b></td>
    <td style="text-align: center;">
      <form method="post" class="form-inline" onsubmit="return confirm('Voulez-vous vraiment modifier ce domaine ?');">
          <div class="form-group mx-sm-3 mb-2" style="margin-right: 20px;">
            <input type="text" name="modifdomaine" class="form-control" value="{{ domaines.nom }}">
          </div>
          <button type="submit" name="modifdomaineid" value="{{ domaines.id }}" class="btn-default btn">Ok</button>
      </form>

    </td>

    <td style="text-align: center;">

      {% if domaines.profil|length + domaines.interlocuteur|length > 0  %}

    <button class="btn default-btn inactiveLink" style="color: #fff;
    background-color: #dddddd;
    border-color: #dddddd;">
        X</button>

    {% else %}

      <form method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer ce domaine ?');">
    <button type="submit" name="supprdomaine" value="{{ domaines.nom }}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></button>
  </form>
    {% endif %}
</td>

  <td style="text-align: center;">{{ domaines.profil|length + domaines.interlocuteur|length }}</td>
   </tr>
 {% endfor %}
 </table>
 <br>

